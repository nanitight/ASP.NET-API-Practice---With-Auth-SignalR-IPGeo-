@using RunGroupTUT.ViewModels
@model EditUserDashboardViewModel


<form asp-action="EditUserProfile" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="City"></label>
            <input asp-for="City"   placeholder="City"/>
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="State"></label>
        <input asp-for="State"  />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pace"></label>
           <input asp-for="Pace"  placeholder ="Pace"/>
        <span asp-validation-for="Pace" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Milage"></label>
        <input asp-for="Milage"  placeholder="Milage" />
        <span asp-validation-for="Milage" class="text-danger"></span>
    </div>
    @*<input asp-for="City" hidden />
    <input asp-for="State" hidden />
    <input asp-for="Pace" hidden />
    <input asp-for="Milage" hidden />*@
    <input asp-for="Id" hidden />
    <label asp-for="Image" class="custom-file mb-2" for="file2">
        <input asp-for="Image" type="file" id="file2" class="custom-file-input height-0" oninput="submitProfileImage();" />
        <span class="btn btn-primary"><i class="icon-upload-to-cloud">&nbsp;</i>Upload</span>
        <span asp-validation-for="Image" class="text-danger"></span>
        <button id="submit-image-button" type="submit" hidden></button>
    </label>
    <div>
        <small>For best results, use an image at least 256px by 256px in either .jpg or .png format</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>